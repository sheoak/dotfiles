! Urxvt Settings
! Filename: .Xdefaults
! Author:   sheoak <https://github.com/sheoak/>
!
! Maintainer: sheoak
! Version:    O.1
! TODO: fix broken paste shortcut / script

! Font, using powerline, make sure the font is installed!
URxvt.font: xft:DejaVu Sans Mono for Powerline:size=9

URxvt.allow_bold:       false
URxvt.boldFont:

URxvt.skipBuiltinGlyphs: true
URxvt.iso14755:          false
URxvt.iso14755_52:       false
URxvt.intensityStyles:   false
Xft.dpi:                 96
Xft.antialias:           true
Xft.rgba:                rgb
Xft.hinting:             true
Xft.hintstyle:           hintslight

URxvt*title:rxvt-unicode
URxvt*iconName:urxvt
URxvt*termName:rxvt-unicode
URxvt*buffered:true

! For mutt notifications
XTerm*bellIsUrgent: true
URxvt*urgentOnBell: true
URxvt*scrollBar: False

URxvt.depth: 32
URxvt.dynamicColors:on
URxvt.fading:      20

URxvt.transparent:   true
URxvt.shading:       18

! Cursor theme
Xcursor*theme:          aero
Xcursor*size:           16

! Clickable links
URxvt.urlLauncher:      firefox

URxvt*cursorBlink:     false
URxvt*cursorUnderline: false

! urxvt tabs settings:
URxvt.tabbed.tabbar-fg:  2
URxvt.tabbed.tabbar-bg:  0
URxvt.tabbed.tab-fg:     2
URxvt.tabbed.tab-bg:     8
URxvt.tabbed.autohide:   yes
URxvt.tabbed.new-button: no
URxvt*tabbed.title:      no

URxvt.perl-lib : $HOME/.urxvt/perl


URxvt.perl-ext-common: default,clipboard,matcher,font-size
!URxvt.perl-ext-common: default,matcher,font-size
URxvt.url-launcher:    /usr/bin/xdg-open
URxvt.matcher.button:  1
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

! CTRL -/+/= to change font size
URxvt.keysym.Control-plus:  perl:font-increase
URxvt.keysym.Control-minus: perl:font-decrease
URxvt.keysym.Control-equal: perl:font-reset

! Keyboard paste
URxvt.keysym.C-V: perl:clipboard:paste

URxvt*modifier: alt

